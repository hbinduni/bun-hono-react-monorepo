# =============================================================================
# Server Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/monorepo

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Use a strong, random secret in production (min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=development-secret-key-change-in-production-min-32-chars

# -----------------------------------------------------------------------------
# OAuth - Google
# -----------------------------------------------------------------------------
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# -----------------------------------------------------------------------------
# OAuth - Facebook
# -----------------------------------------------------------------------------
# Get credentials at: https://developers.facebook.com/apps
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI=http://localhost:3000/api/auth/callback/facebook

# -----------------------------------------------------------------------------
# OAuth - Twitter
# -----------------------------------------------------------------------------
# Get credentials at: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=http://localhost:3000/api/auth/callback/twitter
