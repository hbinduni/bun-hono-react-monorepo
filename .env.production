# Production Environment Variables
# Copy this file to .env.production.local and update with your actual values
# DO NOT commit .env.production.local to version control

# Application
NODE_ENV=production

# PostgreSQL Database (External - Managed Separately)
# Point to your production PostgreSQL instance (local, managed service, or VPS)
# Examples:
#   Local VPS:        postgresql://user:password@localhost:5432/app_db
#   Managed Service:  postgresql://user:password@db.example.com:5432/app_db
#   With SSL:         postgresql://user:password@db.example.com:5432/app_db?sslmode=require
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/app_db

# Server
SERVER_PORT=3000

# Client
CLIENT_PORT=80
# API URL for client (now runtime configurable!)
VITE_API_URL=http://localhost:3000

# Docker Compose
COMPOSE_PROJECT_NAME=monorepo

# Container Names
SERVER_CONTAINER_NAME=monorepo-server
CLIENT_CONTAINER_NAME=monorepo-client

# Docker Image Registry (GitHub Container Registry)
IMAGE_REGISTRY=ghcr.io
GITHUB_USER=your-github-username
PROJECT_NAME=bun-hono-react-monorepo
IMAGE_VERSION=latest
