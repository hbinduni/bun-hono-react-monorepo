# Kubernetes Deployment Environment Variables
# Copy this file to .env.k8s and fill in your actual values
# DO NOT commit .env.k8s to version control!

# GitHub Container Registry Configuration
GITHUB_USER=your-github-username
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Image Configuration
IMAGE_VERSION=latest
PROJECT_NAME=bun-hono-react-monorepo

# Kubernetes Cluster Configuration
K8S_NAMESPACE=bun-hono-react
K8S_CONTEXT=your-kubernetes-context

# Database Configuration (for k8s-generate-secret)
DATABASE_URL=postgresql://postgres:password@postgres-service:5432/monorepo

# Authentication (for k8s-generate-secret)
JWT_SECRET=your-jwt-secret-here-change-in-production

# Application Configuration
NODE_ENV=production
SERVER_PORT=3000

# Client Configuration
# Note: Update k8s/configmap.yaml with the actual API URL
# For cluster-internal: http://server-service:3000
# For external domain: https://api.your-domain.com
VITE_API_URL=http://server-service:3000

# Deployment Configuration
REPLICAS=2

# Ingress Configuration (optional)
INGRESS_ENABLED=false
INGRESS_DOMAIN=your-domain.com
INGRESS_API_DOMAIN=api.your-domain.com
INGRESS_TLS_ENABLED=false

# Resource Limits (optional)
# Uncomment and adjust in k8s/server-deployment.yaml and k8s/client-deployment.yaml
# SERVER_CPU_REQUEST=100m
# SERVER_CPU_LIMIT=500m
# SERVER_MEMORY_REQUEST=128Mi
# SERVER_MEMORY_LIMIT=512Mi
# CLIENT_CPU_REQUEST=50m
# CLIENT_CPU_LIMIT=200m
# CLIENT_MEMORY_REQUEST=64Mi
# CLIENT_MEMORY_LIMIT=256Mi
